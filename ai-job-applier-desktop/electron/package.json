{
  "name": "ai-job-applier-desktop",
  "version": "1.0.0",
  "description": "AI 自动投递助手 - 桌面版",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.main.json && vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder"
  },
  "keywords": ["electron", "job", "automation", "ai"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "antd": "^5.12.0",
    "axios": "^1.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "react-markdown": "^9.0.1",
    "zustand": "^4.4.7"
  },
  "build": {
    "appId": "com.aijobapplier.desktop",
    "productName": "AI求职助手",
    "directories": {
      "output": "../build"
    },
    "files": [
      "dist/**/*",
      "package.json",
      "../backend/dist/ai-job-backend.exe"
    ],
    "extraResources": [
      {
        "from": "../backend/dist/ai-job-backend.exe",
        "to": "backend/ai-job-backend.exe"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "../resources/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "AI求职助手"
    }
  }
}
